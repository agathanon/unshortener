{
  "manifest_version": 2,
  "name": "Unshortener",
  "version": "0.3",

  "description": "Unshorten links from Twitter.",

  "icons": {
    "48": "icons/unshorten.png"
  },

  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "activeTab",
    "clipboardWrite",
    "contextMenus"
  ]
}
